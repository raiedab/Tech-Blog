<div class="row">
    <div>
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog:</h3>

        <form class="form new-blog-form">
            <div>
                <label for="blog-name">Blog Name:</label>
                <input type="text" id="blog-name" name="blog-name" />
            </div>
            <div>
                <label for="blog-desc">Description:</label>
                <textarea id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>

    <div class="col-md-6 blog-list">
        <h3>Current Blogs:</h3>

        {{#each blogs as |blog|}}
        <div class="row">
            <div class="col-md-8">
                <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
        {{! Display this message if there are no blogs }}
        {{ blogs.length ? '' : '<p>No blogs found.</p>' }}
    </div>
</div>

<script src="./js/profile.js"></script>